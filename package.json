{
  "name": "calendar-workspace",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "pnpm --filter playground dev",
    "dev:lib": "pnpm --filter @savvycal/calendar dev",
    "build": "pnpm --filter @savvycal/calendar build && pnpm --filter playground build",
    "build:lib": "pnpm --filter @savvycal/calendar build",
    "typecheck": "pnpm --filter @savvycal/calendar typecheck && pnpm --filter @savvycal/calendar build && pnpm --filter playground typecheck",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "changeset": "changeset",
    "version": "changeset version",
    "release": "pnpm build:lib && changeset publish"
  },
  "devDependencies": {
    "@changesets/changelog-github": "^0.5.2",
    "@changesets/cli": "^2.29.8",
    "@eslint/js": "^9.39.1",
    "@types/node": "^24.10.1",
    "eslint": "^9.39.1",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.4",
    "eslint-plugin-react-hooks": "^7.0.1",
    "eslint-plugin-react-refresh": "^0.4.24",
    "globals": "^16.5.0",
    "prettier": "^3.7.4",
    "typescript": "~5.9.3",
    "typescript-eslint": "^8.46.4"
  }
}
